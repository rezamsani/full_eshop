@using Application.User;
@model UserAddressAddDto;
@{
    ViewData["Title"] = "ثبت آدرس جدید";
    Layout = "~/Areas/Customer/Views/Shared/_CustomerLayout.cshtml";
}
<br />
<br />
<div class="modal-body" data-select2-id="select2-data-19-gnc0">
    <form data-select2-id="select2-data-18-42qi" asp-action="create" asp-controller="Address" asp-area="Customer" method="post">
        <div class="row" data-select2-id="select2-data-17-u1ya">
            <div class="col-lg-6 mb-3">
                <div class="text-sm text-muted mb-1">نام و نام خانوادگی:</div>
                <div class="text-dark font-weight-bold">
                    <div class="form-element-row mb-0">
                        <input type="text" class="input-element" asp-for="ReciverName">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-3">
                <div class="text-sm text-muted mb-1">کد پستی</div>
                <div class="text-dark font-weight-bold">
                    <div class="form-element-row mb-0">
                        <input type="text" class="input-element dir-ltr" asp-for="ZipCode">
