@section Scripts {
    <script src="~/Theme/plugins/apex/apexcharts.min.js"></script>
    <script src="~/Theme/assets/js/dashboard/dash_1.js"></script>
    <script src="~/Theme/assets/js/scrollspyNav.js"></script>
    @* <script src="~/Theme/plugins/apex/custom-apexcharts.js"></script> *@
    <script>
        var DisplayHour = @Html.Raw(Json.Serialize(Model.Today.VisitPerhour.Display));
        var ValueHour = @Html.Raw(Json.Serialize(Model.Today.VisitPerhour.Value));
        // Simple Line

        var sline = {
            chart: {
                height: 350,
                type: 'line',
                zoom: {
                    enabled: false
                },
                toolbar: {
                    show: false,
                }
            },
            dataLabels: {
                enabled: false
            },
            stroke: {
                curve: 'straight'
            },
            series: [{
                name: "Desktops",
                data: ValueHour
            }],
            title: {
                text: 'بازدید در روز',
                align: 'right',
                offsetX: -95,
            },
            grid: {
                row: {
                    colors: ['#f1f2f3', 'transparent'], // takes an array which will be repeated on columns
                    opacity: 0.5
                },
            },
            xaxis: {
                categories: DisplayHour,
            },
            yaxis: {
                labels: {
                    offsetX: -20,
                }
            }
        }

        var chart = new ApexCharts(
            document.querySelector("#s-line"),
            sline
        );

        chart.render();


        // Simple Line Area

            ///----------

        var DisplayDay=@Html.Raw(Json.Serialize(Model.GeneralStats.VisitPerDay.Display));
        var ValueDay=@Html.Raw(Json.Serialize(Model.GeneralStats.VisitPerDay.Value));

            var slineDay = {
                chart: {
                    height: 350,
                    type: 'line',
                    zoom: {
                        enabled: false
                    },
                    toolbar: {
                        show: false,
                    }
                },
                dataLabels: {
                    enabled: false
                },
                stroke: {
                    curve: 'straight'
                },
                series: [{
                    name: "Desktops",
                    data: ValueDay, //[150, 41, 35, 91, 49, 62, 69, 91, 148]
                }],
                title: {
                    text: 'بازدید 30 روز گذشته',
                    align: 'right',
                    offsetX: -95,
                },
                grid: {
                    row: {
                        colors: ['#f1f2f3', 'transparent'], // takes an array which will be repeated on columns
                        opacity: 0.5
                    },
                },
                xaxis: {
                    categories: DisplayDay, //['فروردین', 'اردیبهشت', 'خرداد', 'تیر', 'مرداد', 'شهریور', 'مهر', 'آبان', 'آذر'],
                },
                yaxis: {
                    labels: {
                        offsetX: -20,
                    }
                }
            }
            var chartDay = new ApexCharts(
                document.querySelector("#s-lineDay"),
                slineDay
            );
            chartDay.render();

    </script>

