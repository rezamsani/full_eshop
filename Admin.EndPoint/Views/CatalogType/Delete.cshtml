@model Admin.EndPoint.Models.ViewModel.Catalog.CatalogTypeViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 col-12 layout-spacing">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4> حذف دسته بندی </h4>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">
            <form asp-action="delete" method="post">
                @if (TempData["Messages"] != null)
                {
                    var errors = TempData["Messages"] as List<string> ?? new List<string>();
                    @foreach (var item in errors)
                    {
                        <div class="alert alert-info">
                            <p>@item</p>
                        </div>
                    }
                }

                <h1>آیا از حذف دسته @Model.Type  مطمئن هستید؟</h1>

                <input type="hidden" asp-for="Id" />
                <input type="submit" name="time" value="بله" class="btn btn-danger">
                <a asp-action="index" class="btn btn-info">خیر</a>
            </form>
        </div>
    </div>
</div>
